@model AccountBooks.Models.ChargeModels
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("EditCharge", "Charge",FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group"><input type="hidden" name="Id" value="@Model.Id" />
        @Html.LabelFor(m => m.Category, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.Category, new List<SelectListItem>
                    {
                   //(new SelectListItem() {Text = "请选择", Value = "0", Selected = true}),
                     (new SelectListItem() {Text = "收入", Value = "1"}),
                     (new SelectListItem() {Text = "支出", Value = "2"})
                    }, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Category, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Amount, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => @Model.Amount, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Date, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => @Model.Date, new { @id = "Date", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Date, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Remarks, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextAreaFor(m => @Model.Remarks, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Remarks, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-default">修改</button>
        </div>
    </div>
}

