@model PagedList<AccountBooks.Models.ChargeModels> 
@using Webdiyer.WebControls.Mvc;

<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
                <th>備註</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var chargeItem in Model)
            {
                var index = Model.IndexOf(chargeItem)+1;
                <tr>
                    <td>@index</td>
                    @if (@chargeItem.Category == "支出")
                    {
                        <td class="text-danger">@chargeItem.Category</td>
                    }
                    else
                    {
                        <td class="text-info">@chargeItem.Category</td>
                    }
                    <!--日期 TO String-->
                    <td>@string.Format("{0:yyyy-M-d}", chargeItem.Date)</td>
                    <!--Int to Currency String-->
                    <td>@string.Format("{0:C}", chargeItem.Amount)</td>@*{0:C}转化成货币型*@
                    <td>
                        <textarea cols="50" rows="5">
                            @chargeItem.Remarks
                        </textarea>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @Html.Pager(Model, new PagerOptions { PageIndexParameterName = "pageNumber" })
</div>